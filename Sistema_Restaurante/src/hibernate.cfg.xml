<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" >
<hibernate-configuration >
	<session-factory >
		<property name = "connection.driver_class" >com.mysql.jdbc.Driver </property >
		<property name = "connection.url">jdbc:mysql://localhost/bd_sistema_restaurante</property>
		<property name = "connection.username" >root</property >
		<property name = "connection.password" >root</property >
		<property name = "connection.pool_size" >1</property >
		<property name = "dialect" > org.hibernate.dialect.MySQLDialect </property >
		<property name = "show_sql" > true </property > <!-- en true muestra hql en consola -->
		<!-- Mapeo Entidades -->
			<mapping resource = "mapeos/Stock.hbm.xml" />
			<mapping resource = "mapeos/Ingrediente.hbm.xml" />
			<mapping resource = "mapeos/Rubro.hbm.xml" />
			<mapping resource = "mapeos/Subrubro.hbm.xml" />
			<mapping resource = "mapeos/Producto.hbm.xml" />
			<mapping resource = "mapeos/TipoCliente.hbm.xml" />
			<mapping resource = "mapeos/TipoEmpleado.hbm.xml" />	
			<mapping resource = "mapeos/Mesa.hbm.xml" />
			<mapping resource = "mapeos/PlatoIngrediente.hbm.xml" />
	</session-factory >
</hibernate-configuration >