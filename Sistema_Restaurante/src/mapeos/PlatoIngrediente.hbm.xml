<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping >
	<class name = "datos.PlatoIngrediente" table = "platoIngrediente" >
		<composite-id class = "PlatoIngrediente" mapped = "true">
			<key-property name="plato" type="int" column="plato" /> 
			<key-many-to-one name="plato" class="datos.Plato" column="idProducto"/>
			<key-property name="ingrediente" type="int" column="ingrediente" />
		</composite-id>
		<property column = "cantidad" name = "cantidad" type = "float" />
	</class >		
</hibernate-mapping >


