<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping >
	<class name = "datos.Producto" table = "producto" >
		<id column = "idProducto" name = "idProducto" >
			<generator class = "identity" />
		</id >
		<property column = "nombre" name = "nombre" type = "string" />
		<property column = "descripcion" name = "descripcion" type = "string" />
		<property column = "imagen" name = "imagen" type = "binary" />
		<many-to-one name = "rubro" />	
		<many-to-one name = "subrubro" />		
	</class >
</hibernate-mapping >