<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping >
	<class name = "datos.Producto" table = "producto" >
		<id column = "idProducto" name = "idProducto" >
			<generator class = "identity" />
		</id >
		<property column = "nombre" name = "nombre" type = "string" />
		<property column = "descripcion" name = "descripcion" type = "string" />
		<property column = "imagen" name = "imagen" type = "binary" />
		<many-to-one name = "rubro" />	
		<many-to-one name = "subrubro" />
		<joined-subclass name="datos.Plato" table="plato">
	        <key column="idPlato"/>
	        <set name = "platoIngredientes" cascade="save-update" table = "platoIngrediente" inverse = "true" lazy = "true" fetch = "select" >
				<key column = "plato" not-null = "true"/>
				<one-to-many class = "datos.PlatoIngrediente" /> 
			</set >
	    </joined-subclass>
	    <joined-subclass name="datos.Bebida" table="bebida">
	        <key column="idBebida"/>
	        <property column = "litros" name = "litros" type = "float" />
	        <many-to-one name = "stock" />
	    </joined-subclass>		
	</class >
</hibernate-mapping >